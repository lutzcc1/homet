<div id="meals-carousel" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @meal.photos.count.times do %>
      <li data-target="#meals-carousel" data-slide-to="1" class="active"></li>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <% @meal.photos.each_with_index do |photo, index| %>
      <div class="carousel-item <% if index == 0 %> active <% end %>">
        <%= cl_image_tag photo.key, height: 400, width: 1264, crop: :fill, class: 'card-img d-block w-100', alt: "First slide" %>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#meals-carousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#meals-carousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
