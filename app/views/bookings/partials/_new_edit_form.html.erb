  <% open_hr = @meal.open_hrs.to_s.scan(/\d\d:\d\d/)[0].split(':') %>
  <% close_hr = @meal.close_hrs.to_s.scan(/\d\d:\d\d/)[0].split(':') %>

  <div class = 'container'>
    <%= simple_form_for @booking do |f| %>
          <%= f.input :date, as: :date, html5: true, required: true %>
          <%= f.time_select :time,
              combined: true,
              default: Time.now.change(hour: 12, min: 00),
              minute_interval: 30,
              time_separator: '',
              start_hour: open_hr[0],
              start_minute: open_hr[1],
              end_hour: close_hr[0],
              end_minute: close_hr[1],
              ampm: true
          %>
          <%= f.input :eaters, collection: ((@meal.min_eaters)..(@meal.max_eaters)).to_a, required: true %>
          <%= f.button :submit, class: 'btn btn-primary' %>
    <%end%>
  </div>
