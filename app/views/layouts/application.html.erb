<!DOCTYPE html>
<html>
  <head>
    <title>Homet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_pack_tag 'application', media: 'all' %>


    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>

    <!-- navbar -->
    <nav class="navbar sticky-top navbar-expand-xl navbar-light bg-light d-flex justify-content-between">
      <%= link_to 'HomEt', root_path, class: "navbar-brand"%>
      <div class="navbar-nav d-flex flex-end flex-row-reverse align-items-center">
        <% if user_signed_in? then %>
            <%= link_to 'Manage My Meals', offered_meals_path, class: "nav-link"%>
            <%= link_to 'Manage My Bookings', bookings_path, class: "nav-link"%>
            <%= link_to "Log-out",
            destroy_user_session_path,
            method: :delete,
            data: { confirm: "Are you sure you want to log out?" },
            class: "nav-link"%>
          <%else%>
            <%= link_to 'Sign-Up', new_user_registration_path, class: "nav-link"%>
            <%= link_to 'Log-in', new_user_session_path, class: "nav-link"%>
        <%end%>
      </div>
    </nav>
    <!-- navbar -->

    <!-- flash messages for authentication -->
    <% if notice %>
      <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= alert %>
      </div>
    <% end %>
    <!-- flash messages for authentication -->

    <div class="footer-wrapper">
      <div id="my-container" class="container">
        <%= yield %>
      </div>

      <!-- footer -->
      <div class="footer">
        <div class="footer-links">
          <a href="#"><i class="fab fa-instagram"></i></a>
          <a href="#"><i class="fab fa-facebook"></i></a>
          <a href="#"><i class="fab fa-twitter"></i></a>
        </div>
        <div class="footer-copyright">
          Â© <%= Date.today.year %> Homet.
        </div>
      </div>
      <!-- footer -->
    </div>

  </body>
</html>
