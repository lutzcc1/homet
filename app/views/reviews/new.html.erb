<div class = 'container' >
  <h2>Tell us about your <%= @meal.name  %> meal experience! </h2>
    <br>
      <%= simple_form_for [@meal, @review] do |f| %>
        <%= f.input :rating, collection: %w{0 1 2 3 4 5} %>
        <%= f.input :comment %>

        <%= f.submit class: 'btn btn-primary' %>
    <% end %>
</div>
